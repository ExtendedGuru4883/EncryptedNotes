@page "/AddNote"
<h3>AddNote</h3>

<EditForm OnValidSubmit="SubmitAsync" Model="_model">
    <DataAnnotationsValidator/>
    <ul>
        @foreach (var error in _errors)
        {
            <li class="text-danger">@error</li>
        }
    </ul>

    <InputText @bind-Value="_model.Title" placeholder="Title"/>
    <ValidationMessage For="@(() => _model.Title)"/>

    <InputText @bind-Value="_model.Content" placeholder="Content"/>
    <ValidationMessage For="@(() => _model.Content)"/>

    <button type="submit" disabled="@_isLoading">@(_isLoading ? "Loading..." : "Add note")</button>
</EditForm>